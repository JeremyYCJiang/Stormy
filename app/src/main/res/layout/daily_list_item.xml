<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="#ffaa00"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleImageViewMax"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureLabelMax"
        tools:text="100"
        android:layout_alignBottom="@+id/circleImageViewMax"
        android:layout_alignTop="@+id/circleImageViewMax"
        android:layout_alignLeft="@+id/circleImageViewMax"
        android:layout_alignRight="@+id/circleImageViewMax"
        android:gravity="center"
        android:textColor="#fff25019"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleImageViewMin"
        android:layout_toRightOf="@+id/circleImageViewMax"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureLabelMin"
        tools:text="100"
        android:layout_alignBottom="@+id/circleImageViewMin"
        android:layout_alignTop="@+id/circleImageViewMin"
        android:layout_alignLeft="@+id/circleImageViewMin"
        android:layout_alignRight="@+id/circleImageViewMin"
        android:gravity="center"
        android:textColor="#ff3845f2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/circleImageViewMin"
        android:layout_toEndOf="@+id/circleImageViewMin"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayNameLabel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        tools:text="Whatday?"/>


</RelativeLayout>